@model IEnumerable<Memberships.Areas.Admin.Models.ProductModel>
@using Memberships.Areas.Admin.Models;

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.Partial("_CreateNewButtonPartial")
</p>
<table class="table table-striped table-condensed">
    <tr class="success">
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductLinkTexts)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductTypes)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @* Note second line is to display the id in paratheses; also "s" removed from first line to deliver a string result from the collection which is denoted with the "S" in the names above.*@
                @Html.DisplayFor(modelItem => item.ProductLinkText)
                (@{@Html.DisplayFor(modelItem => item.ProductLinkTextId)})
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductType)
                (@{@Html.DisplayFor(modelItem => item.ProductTypeId)})
            </td>

            <td>
                @Html.Partial("_TableButtonsPartial", new SmallButtonModel { Id = item.Id })
            </td>
        </tr>
    }

</table>
